<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DialView">
        <attr name="dv_shape">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
        <attr format="integer" name="dv_shape_width"/>
        <attr format="integer" name="dv_shape_height"/>
        <attr format="integer" name="dv_shape_corners"/>

        <attr name="dv_background_scale_type">
            <enum name="center" value="0"/>
            <enum name="center_crop" value="1"/>
            <enum name="auto_crop" value="2"/>
        </attr>

        <attr name="dv_style_position">
            <enum name="top" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>

        <attr format="boolean" name="dv_check_enabled"/>
        <attr format="dimension|reference" name="dv_check_line_width"/>
        <attr format="dimension|reference" name="dv_check_line_padding"/>
        <attr format="color|reference" name="dv_check_line_color"/>
        <attr format="boolean" name="dv_checked"/>

        <attr format="reference" name="dv_background_src"/>
        <attr format="reference" name="dv_style_src"/>
        <attr format="integer|reference" name="dv_style_base_on_width"/>

        <attr format="color|reference" name="dv_background_none_color"/>
    </declare-styleable>
</resources>